#updatePartPanel(hidden).panel
	h1 Enter Part Details to Update
	hr

	#innerWrap
		
		form(action="/updatePart" method="POST")#updatePartform
			table
				tr
					td
						h4 Enter PartId To Update:
					td
						legend
							input(type="text" name="PartIdToUpdate" placeholder="Part Id")
			table#updatePartTable(style="width:80%;float:left")
				tr#deliveryDt
					td(style="width:50%")
						h5 Date Of Delivery:
					td
						legend 	
							input(type="date" name="DateOfDelivery" placeholder="Date Of Delivery" disabled)
				tr#vehicleId
					td(style="width:50%")
						h5 Vehicle Id:
					td
						legend 
							input(type="text" name="VehicleId" placeholder="Vehicle Id" disabled)
				tr#installationDt
					td(style="width:50%")
						h5 Date Of Installation:
					td
						legend 
							input(type="date" name="DateOfInstallation" placeholder="Date Of Installation" disabled)
				tr#warrantyStartDt
					td(style="width:50%")
						h5 Warranty Start Date:
					td
						legend 
							input(type="date" name="WarrantyStartDate" placeholder="Warranty Start Date" disabled)
				tr#warrantyEndDt
					td(style="width:50%")
						h5 Warranty End Date:
					td
						legend 
							input(type="date" name="WarrantyEndDate" placeholder="Warranty End Date" disabled)
				tr#servicingDt
					td(style="width:50%")
						h5 Servicing Date:
					td
						legend 
							input(type="date" name="ServicingDate" placeholder="Servicing Date" disabled)
				tr#serviceDesc
					td(style="width:50%")
						h5 Service Desc:
					td
						legend 
							input(type="text" name="ServiceDesc" placeholder="Service Desc" disabled)
				tr
					td#updatePartBut(colspan="2" style="font-size: 12px;")
						legend
							button(type="button" style="margin:10px 10px 5px 10px" )#update
								span.fa.fa-plus &nbsp;&nbsp;
								span UPDATE
				